    <script>
        // Benutzerdaten (normalerweise in einer Datenbank)
        let users = JSON.parse(localStorage.getItem('users')) || [];
        let currentUser = JSON.parse(localStorage.getItem('currentUser')) || null;
        let currentBooking = JSON.parse(localStorage.getItem('currentBooking')) || null;
        let appointments = JSON.parse(localStorage.getItem('appointments')) || [];
        let requests = JSON.parse(localStorage.getItem('requests')) || [];
        let selectedRequestType = null;
        
        // Tab-Funktionalität
        function openTab(tabName) {
            // Alle Tab-Inhalte ausblenden
            const tabContents = document.getElementsByClassName('tab-content');
            for (let i = 0; i < tabContents.length; i++) {
                tabContents[i].classList.remove('active');
            }
            
            // Alle Tab-Buttons deaktivieren
            const tabButtons = document.getElementsByClassName('tab-button');
            for (let i = 0; i < tabButtons.length; i++) {
                tabButtons[i].classList.remove('active');
            }
            
            // Gewählten Tab-Inhalt und Button aktivieren
            document.getElementById(tabName).classList.add('active');
            event.currentTarget.classList.add('active');
        }
        
        // Buchungsformular verarbeiten
        document.getElementById('booking-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!currentUser) {
                document.getElementById('booking-error').style.display = 'block';
                return;
            }
            
            const service = document.getElementById('service');
            const serviceText = service.options[service.selectedIndex].text;
            const servicePrice = service.options[service.selectedIndex].getAttribute('data-price');
            const date = document.getElementById('booking-date').value;
            const time = document.getElementById('booking-time').value;
            
            // Buchung speichern
            currentBooking = {
                id: Date.now(),
                userId: currentUser.id,
                service: service.value,
                serviceText: serviceText,
                price: servicePrice,
                date: date,
                time: time,
                notes: document.getElementById('notes').value,
                status: 'pending'
            };
            
            appointments.push(currentBooking);
            localStorage.setItem('appointments', JSON.stringify(appointments));
            
            document.getElementById('booking-confirmation').style.display = 'block';
            this.reset();
            
            // Nach 3 Sekunden Bestätigung ausblenden
            setTimeout(() => {
                document.getElementById('booking-confirmation').style.display = 'none';
            }, 3000);
        });
        
        // Anfrageformular verarbeiten
        document.getElementById('request-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!currentUser) {
                alert('Bitte melden Sie sich zuerst an, um eine Anfrage zu stellen.');
                return;
            }
            
            if (!selectedRequestType) {
                alert('Bitte wählen Sie eine Art der Anfrage aus.');
                return;
            }
            
            const title = document.getElementById('request-title').value;
            const description = document.getElementById('request-description').value;
            const budget = document.getElementById('request-budget').value;
            const deadline = document.getElementById('request-deadline').value;
            
            // Anfrage speichern
            const newRequest = {
                id: Date.now(),
                userId: currentUser.id,
                type: selectedRequestType,
                title: title,
                description: description,
                budget: budget,
                deadline: deadline,
                status: 'new',
                date: new Date().toISOString()
            };
            
            requests.push(newRequest);
            localStorage.setItem('requests', JSON.stringify(requests));
            
            document.getElementById('request-confirmation').style.display = 'block';
            this.reset();
            resetRequestTypes();
            
            // Nach 3 Sekunden Bestätigung ausblenden
            setTimeout(() => {
                document.getElementById('request-confirmation').style.display = 'none';
            }, 5000);
        });
        
        // Anfragentyp auswählen
        function selectRequestType(type) {
            selectedRequestType = type;
            
            // Alle Anfragentypen zurücksetzen
            document.querySelectorAll('.request-type').forEach(el => {
                el.classList.remove('selected');
            });
            
            // Ausgewählten Typ markieren
            event.currentTarget.classList.add('selected');
            
            // Im versteckten Feld speichern
            document.getElementById('request-type').value = type;
        }
        
        // Anfragentypen zurücksetzen
        function resetRequestTypes() {
            selectedRequestType = null;
            document.querySelectorAll('.request-type').forEach(el => {
                el.classList.remove('selected');
            });
            document.getElementById('request-type').value = '';
        }
        
        // Preisanzeige aktualisieren
        function updatePrice() {
            const service = document.getElementById('service');
            const price = service.options[service.selectedIndex].getAttribute('data-price') || 0;
            document.querySelector('.price-display .price').textContent = `${price}€`;
        }
        
        // Avatar-Editor öffnen
        function openAvatarEditor() {
            document.getElementById('avatarOverlay').style.display = 'flex';
        }
        
        // Avatar-Editor schließen
        function closeAvatarEditor() {
            document.getElementById('avatarOverlay').style.display = 'none';
        }
        
        // Abmelden
        document.getElementById('logoutBtn').addEventListener('click', function() {
            currentUser = null;
            localStorage.removeItem('currentUser');
            window.location.reload();
        });
        
        // Avatar-Editor Event Listener
        document.querySelector('.cancel-avatar').addEventListener('click', closeAvatarEditor);
        document.querySelector('.confirm-avatar').addEventListener('click', function() {
            alert('Profilbild wurde aktualisiert!');
            closeAvatarEditor();
        });
        
        // Datei-Upload für Avatar
        document.getElementById('avatarUpload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('avatarPreview').innerHTML = `<img src="${e.target.result}" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">`;
                }
                reader.readAsDataURL(file);
            }
        });
        
        // Datumseingabe auf zukünftige Tage beschränken
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('booking-date').setAttribute('min', today);
        document.getElementById('request-deadline').setAttribute('min', today);
        
        // Beim Laden der Seite
        window.addEventListener('load', function() {
            // Standardbenutzer erstellen, falls keiner vorhanden
            if (users.length === 0) {
                const defaultUser = {
                    id: 1,
                    firstname: 'Max',
                    lastname: 'Mustermann',
                    email: 'max@example.com',
                    phone: '+49 123 456789',
                    password: 'password123',
                    role: 'Premium Kunde'
                };
                users.push(defaultUser);
                localStorage.setItem('users', JSON.stringify(users));
            }
            
            // Wenn kein Benutzer angemeldet ist, Standardbenutzer verwenden
            if (!currentUser) {
                currentUser = users[0];
                localStorage.setItem('currentUser', JSON.stringify(currentUser));
            }
            
            // Benutzerinfo anzeigen
            document.getElementById('userName').textContent = `${currentUser.firstname} ${currentUser.lastname}`;
            document.getElementById('userRole').textContent = currentUser.role || 'Kunde';
        });
    </script>
